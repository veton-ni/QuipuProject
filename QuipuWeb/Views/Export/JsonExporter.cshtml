<div class="container-xl px-4 mt-4">
    <hr class="mt-0 mb-4">
    <div class="row">

        <div class="col-xl-10 offset-1">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Export Json Data</div>
                <div class="card-body">
                    <form id="form-export-json-data" action="@Url.Action("ExportData", "Export")" method="post">
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (Full name)-->
                            <div class="custom-control custom-checkbox col-md-2">
                                <input type="checkbox" class="custom-control-input" id="orderby-name" name="orderByName" >
                                <label class="custom-control-label" for="orderby-name">Order by Name</label>
                            </div>
                            <!-- Form Group (Email address)-->
                            <div class="custom-control custom-checkbox col-md-2">
                                <input type="checkbox" class="custom-control-input" id="orderby-name-type" name="orderByNameType">
                                <label class="custom-control-label" for="orderby-name-type">Desc</label>
                            </div>
                        </div>
                        <hr />
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (Full name)-->
                            <div class="custom-control custom-checkbox col-md-2">
                                <input type="checkbox" class="custom-control-input" id="orderby-birthdate" name="orderByBirthdate">
                                <label class="custom-control-label" for="orderby-birthdate">Birthdate</label>
                            </div>
                            <!-- Form Group (Email address)-->
                            <div class="custom-control custom-checkbox col-md-2">
                                <input type="checkbox" class="custom-control-input" id="orderby-birthdate-type" name="orderByBirthdateType">
                                <label class="custom-control-label" for="orderby-birthdate-type">Desc</label>
                            </div>
                        </div>
                        <hr />
                        <!-- Save changes button-->
                        <button class="btn btn-primary btn-save" type="submit">Export to JSON</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

