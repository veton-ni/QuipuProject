<div class="container-xl px-4 mt-4">
    <hr class="mt-0 mb-4">
    <div class="row">

        <div class="col-xl-10 offset-1">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Import XML Data</div>
                <div class="card-body">
                    <form id="form-export-json-data" enctype="multipart/form-data" action="@Url.Action("ImportXmlData", "Import")" method="post">
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (Full name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputFile">Upload xml file</label>
                                <input class="form-control" id="inputFile" name="xmlFile" type="file" >
                            </div>
                        </div>
                        <hr />
                        <!-- Save changes button-->
                        <button class="btn btn-primary btn-save" type="submit">Export to JSON</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

